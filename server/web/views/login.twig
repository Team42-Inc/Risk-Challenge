{% include 'header.twig' %}
<body>

<div class="container">
    {% if error %}
        <div>{{ error }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">

        <div class="form-group">
            <label for="username">Nom d'utilisateur :</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="pseudonyme" required/>
        </div>

        <div class="form-group">
            <label for="password">Mot de pass :</label>
            <input class="form-control" type="password" id="password" name="_password" placeholder="mot de pass" required/>
        </div>

        <div class="form-group">
            <label for="otp">Token OTP :</label>
            <input class="form-control" type="number" id="otp" name="_otp" size="6" placeholder="token" required/>
        </div>

        <button type="submit" class="btn btn-default">Connexion</button>
    </form>
</div>
</body>
</html>