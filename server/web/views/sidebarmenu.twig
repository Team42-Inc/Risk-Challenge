<div class="user-panel">
    <div class="pull-left image">
        <img src="./assets/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
    </div>
    <div class="pull-left info">
        <p>{{ username|default('Dark Vador') }}</p>
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
    </div>
</div>

<ul class="sidebar-menu">
    <li class="header">MAIN NAVIGATION</li>
    <li class="active treeview">
        <a href="#">
            <i class="fa fa-dashboard"></i> <span>Users</span>
            <span class="pull-right-container">
                  <i class="fa fa-angle-left pull-right"></i>
                </span>
        </a>
        <ul class="treeview-menu">
            <li class="active"><a href="{{ path('user-add') }}"><i class="fa fa-circle-o"></i> Add user</a></li>
            <li><a href="{{ path('user-add') }}"><i class="fa fa-circle-o"></i> Delete user</a></li>
        </ul>
    </li>

    <li class="treeview">
        <a href="#">
            <i class="fa fa-laptop"></i>
            <span>Agents</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
        </a>
        <ul class="treeview-menu">
            {% if hosts %}
            {%  for host in hosts %}
            <li><a href="{{ path('agent', {'id': host.host}) }}"><i class="fa fa-circle-o"></i> {{host.agent}}</a></li>
            {% endfor %}
            {% endif %}
        </ul>
    </li>
    <li><a href="{{ path('logout') }}"><i class="fa fa-share"></i> <span>Logout</span></a></li>
</ul>